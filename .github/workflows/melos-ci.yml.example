name: Melos CI

on:
  push:
    branches: [ main, develop ]
    paths:
      - 'flutter/**'
      - '.github/workflows/melos-ci.yml'
  pull_request:
    branches: [ main, develop ]
    paths:
      - 'flutter/**'
      - '.github/workflows/melos-ci.yml'

jobs:
  analyze:
    name: Analyze & Test Flutter Packages
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.24.0'
          channel: 'stable'
          cache: true

      - name: Verify Flutter installation
        run: flutter --version

      - name: Install Melos
        run: dart pub global activate melos

      - name: Change to Flutter directory
        run: cd flutter

      - name: Bootstrap packages
        run: melos bootstrap

      - name: Check formatting
        run: |
          cd flutter
          melos run format:check

      - name: Analyze code
        run: |
          cd flutter
          melos run analyze

      - name: Run tests
        run: |
          cd flutter
          melos run test

      - name: Run linter
        run: |
          cd flutter
          melos run lint

  build-example:
    name: Build Example App
    runs-on: ubuntu-latest
    needs: analyze

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.24.0'
          channel: 'stable'
          cache: true

      - name: Setup Java
        uses: actions/setup-java@v4
        with:
          distribution: 'temurin'
          java-version: '17'

      - name: Install Melos
        run: dart pub global activate melos

      - name: Bootstrap packages
        run: |
          cd flutter
          melos bootstrap

      - name: Build Android APK
        run: |
          cd flutter
          melos run build:example

      - name: Upload APK artifact
        uses: actions/upload-artifact@v4
        with:
          name: example-app-debug
          path: flutter/example/build/app/outputs/flutter-apk/app-debug.apk
          retention-days: 7

  integration-test:
    name: Integration Tests
    runs-on: macos-latest
    needs: analyze

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.24.0'
          channel: 'stable'
          cache: true

      - name: Install Melos
        run: dart pub global activate melos

      - name: Bootstrap packages
        run: |
          cd flutter
          melos bootstrap

      - name: Run iOS Simulator
        uses: futureware-tech/simulator-action@v3
        with:
          model: 'iPhone 15'

      - name: Run integration tests
        run: melos run test:integration
        working-directory: flutter
